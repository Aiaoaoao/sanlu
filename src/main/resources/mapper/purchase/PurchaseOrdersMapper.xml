  <select id="selectMaxIdnum" resultType="java.lang.String">
    SELECT MAX(orders) FROM purchase_orders where createdate =#{currentDate}
  </select>


  <select id="findPurchaseOrders" resultMap="BaseResultMap" >

    select * from purchase_orders order by id DESC

  </select>

  <select id="findPurchaseOrdersBySearchOrders" resultMap="BaseResultMap">
       select * from purchase_orders
        <where>
          <if test="orders != null and orders != ''">
            and orders like concat(concat('%',#{orders}),'%')
          </if>
        </where>
        order by id DESC
  </select>

  
  <select id="findPurchaseByOrder" resultMap="BaseResultMap">
    SELECT * FROM purchase_orders where seeorders =#{orders}
  </select>


  <select id="findPurchaseByOrders" resultMap="BaseResultMap">
      SELECT * FROM purchase_orders where orders =#{orders}
  </select>


  <select id="findPurchaseOrdersBySupplier" resultMap="BaseResultMap">

    select * from purchase_orders

    <where>

      <if test="supplier != null and supplier != ''" >
        and  suppliernum = #{supplier}
      </if>
      <if test="startTime != null and startTime != ''" >
        and str_to_date(createdate, '%Y-%m-%d') &gt;= str_to_date(#{startTime}, '%Y-%m-%d')
      </if>
      <if test="endTime != null and endTime != ''" >
        and str_to_date(createdate, '%Y-%m-%d') &lt;= str_to_date(#{endTime}, '%Y-%m-%d')
      </if>

    </where>

    order by id DESC

  </select>


  <select id="findPurchaseOrderByStatus" resultMap="BaseResultMap">
    select * from purchase_orders
    <where>
      <if test="status != null and status != '' and status != 0">
        and shstatus = #{status}
      </if>
    </where>
    order by id DESC
  </select>
  
  <select id="findPurchaseOrderNotSh" resultMap="BaseResultMap">
    select * from purchase_orders where shstatus = 0 order by id desc
  </select>

